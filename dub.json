{
    "name": "dv8",
    "description": "A D binding to the v8 C++ API",
    "copyright": "Copyright Â© 2014, Colden Cullen",
    "license": "MIT",
    "authors": [ "Colden Cullen" ],
    "libs": [
        "icuuc",
        "icui18n",

        "v8_base",
        "v8_libbase",
        "v8_snapshot"
    ],
    "libs-windows": [
        "ws2_32", "winmm", "oleaut32"
    ],
    "libs-posix": [
        "c++"
    ],

    "dflags-windows": [
        "-m64"
    ],

    "sourcePaths": [ "source/" ],
    "sourceFiles-windows": [
        "source/c/instantiations.obj"
    ],
    "sourceFiles-posix": [
        "source/c/instantiations.o"
    ],

    "preBuildCommands-windows": [
        "robocopy $PACKAGE_DIR\\lib\\windows\\ .\\ /MIR /XX /NFL /NDL /NJH /NJS || (exit 0)"
    ],
    "preBuildCommands-osx": [
        "cp $PACKAGE_DIR/lib/osx/* /usr/local/lib/ || True"
    ],
    "preBuildCommands-linux": [
        "cp $PACKAGE_DIR/lib/linux/* /usr/lib/ || true"
    ]
}
